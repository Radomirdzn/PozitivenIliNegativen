using System;

namespace aa3
{
    class Program
    {
        static void Main(string[] args)
        {
            int[,] arr2d = new int[3, 2] 
            { 
                { 1, 3 },
                { 3, 4 },
                { 5, 6 }
            };
            int rowcount = arr2d.GetLength(0);
            int columncount = arr2d.GetLength(1);
            Console.WriteLine("Rows Count: " + rowcount);
            Console.WriteLine("Coulmns Count: " + columncount);

            for (int i = 0; i < 3; i++)
            {
                for (int x = 0; x < 2; x++)
                {
                    Console.Write(arr2d[i, x] + (x != columncount - 1 ? ", " : ""));
                }
                Console.WriteLine();
            }
            
            Console.ReadKey();
        }

    }
